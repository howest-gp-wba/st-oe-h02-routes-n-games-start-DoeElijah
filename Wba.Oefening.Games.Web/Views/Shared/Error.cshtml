@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h2>HTTP 500 - Server Error</h2>
<p>Something when terribly wrong on the server while executing your request.</p>
<p>
    This might be cause by an overworked and underpaid programmer.<br />
    We will track him down and fire him at once to appease you, oh Mighty End User!
</p>